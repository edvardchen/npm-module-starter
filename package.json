{
  "name": "module-starter",
  "version": "1.0.0",
  "description": "用于编写 node 的模块的脚手架",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "scripts": {
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "postpublish": "git push",
    "lint": "eslint --ignore-pattern src/*.spec.js ./src",
    "build": "babel src --out-dir lib  --compact=false --ignore=**/*.spec.js",
    "test-file": "mocha --compilers js:@babel/register",
    "test": "npm run test-file -- src/**/*.spec.js",
    "cov-open": "opn coverage/lcov-report/index.html",
    "cov-file": "cross-env NODE_ENV=test nyc --reporter=lcov mocha",
    "coverage": "npm run cov-file -- src/**/*.spec.js && npm run cov-open"
  },
  "lint-staged": {
    "*.{js,scss}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NoChapter/npm-module-starter.git"
  },
  "keywords": [
    "starter"
  ],
  "author": "edvardchen",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/plugin-proposal-export-default-from": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "babel-eslint": "^7.2.3",
    "babel-plugin-istanbul": "^5.1.1",
    "cross-env": "^5.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.18.2",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "flow-bin": "^0.80.0",
    "husky": "^1.0.0-rc.14",
    "lint-staged": "^13.1.0",
    "mocha": "^10.2.0",
    "nyc": "^14.1.0",
    "opn-cli": "^3.1.0",
    "prettier": "^1.14.2",
    "should": "^11.2.1"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false,
    "require": [
      "@babel/register"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
